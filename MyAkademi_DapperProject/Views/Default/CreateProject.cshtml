@model MyAkademi_DapperProject.Dtos.CreateProjectDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <br />
        <label>Proje Adı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Tamamlanan Gün</label>
        <input type="text" asp-for="CompleteDay" class="form-control" />
        <br />
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Prje Kategorisi</label>
        <input type="text" asp-for="ProjectCategory" class="form-control" />
        <br />
        <button class="btn btn-outline-primary">Projeyi Ekle</button>
    </form>
    
</div>